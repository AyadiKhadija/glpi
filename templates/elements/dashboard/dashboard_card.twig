{% block component %}
   <div class='siem-dashboard-card card text-center card-{{ card.type }} {{ card.extra_card_classes is defined ? card.extra_card_classes : ''}}'>
      <div class='card-header'>
         <p class="my-0 font-weight-bold flex-grow-1">{{ card.title }}</p>
      </div>
      <div class='card-body'>
         {% if card.type == 'counter' %}
            <p>{{ card.value }}</p>
         {% elseif card.type == 'table' %}
            <table class="w-100">
               <thead>
                  {% for heading in card.headers %}
                     <th>{{ heading }}</th>
                  {% endfor %}
               </thead>
               <tbody>
                  {% for row in card.rows %}
                     <tr>
                        {% for cell in row %}
                           <td class="{{ cell.class is defined ? cell.class : "" }}">{{ cell.value }}</td>
                        {% endfor %}
                     </tr>
                  {% endfor %}
               </tbody>
            </table>
         {% elseif card.type == 'table-v' %}
            <table class="w-100">
               {% for heading in card.headers %}
                  {% set index = loop.index0 %}
                  {% set cell = card.rows[index] %}
                  {% set cell_class = ( cell.class is defined) ? cell.class : "" %}
                  <tr class="{{ cell_class }}">
                     <th class="text-center">{{ heading }}</th>
                     <td class="text-left">{{ cell.value }}</td>
                  </tr>
               {% endfor %}
            </table>
         {% elseif card.type == 'invalid' %}
            <p>{{ card.value }}</p>
         {% endif %}
      </div>
   </div>
{% endblock %}