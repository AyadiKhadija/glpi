{% set rand = random() %}
{% set mainform = main_form|default(true) %}
{% set main_block_class = mainform ? '' : 'sub_criteria' %}
{% set card_class = mainform ? 'search-form card card-sm mb-4' : 'border d-inline-block ms-1' %}

{% if mainform %}
   <form name="searchform{{ normalized_itemtype }}" class="search-form-container" method="get" action="{{ target }}">
{% endif %}

<div class="{{ card_class }} {{ session('glpifold_search') ? 'd-none' : '' }}">
   <div id="searchcriteria{{ rand }}" class="{{ main_block_class }}">
      {# init criteria count #}
      <script>
         let nbcriteria{{ normalized_itemtype ~ random() }} = {{ criteria|length }};
      </script>
      <div class="list-group list-group-flush list-group-hoverable criteria-list pt-2" id="criteriatable{{ normalized_itemtype }}{{ random() }}">

      </div>
   </div>
</div>
