{% set users_id = session('glpiID') %}

<div class="itil-timeline">
   <div class="timeline-item ITILContent">
      <div class="row">
         <div class="col-auto d-flex flex-column picture-block">
            {% include "components/user/picture.html.twig" with {'users_id': users_id} only %}
         </div>
         <div class="col-12 col-sm content-block">
            <div class="d-flex">
               <div class="d-none d-md-block">
                  <strong>{{ User__getLink(users_id) }}</strong>
               </div>
            </div>
            <span class="row mt-2 timeline-content left card">
               <div class="card-body">
                  {% if item.isNewItem() %}
                     <div class="alert alert-info" role="alert">
                        {{ __('%1$s will be added in entity %2$s')|format(
                           item.getTypeName(1),
                           "<span class='badge bg-secondary ms-1'>" ~ getDropdownName('glpi_entities', item.fields['entities_id']) ~ "</span>"
                        )|raw }}
                     </div>
                  {% endif %}

                  {% include "components/itilobject/timeline/simple_form.html.twig" with {
                     'no_form': true
                  } %}
               </div>
            </span>
         </div>
      </div>
   </div>
</div>
